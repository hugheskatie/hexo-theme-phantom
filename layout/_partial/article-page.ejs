
<% if(theme.show_dates) { %>
    <h1 class="title"><%- item.title || theme.default_post_title || "Untitled" %></h1>
    <div class="meta">
        <%= item.date.format(config.date_format) %>
    </div>
<% } else if(item.cover_detail || theme.default_cover_detail) { %>
    <h1 class="splash-title" style="background-image:linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(<%- item.cover_detail || theme.default_cover_detail %>)"><%- item.title || theme.default_post_title || "Untitled" %></h1>
<% } else { %>
    <h1><%- item.title || theme.default_post_title || "Untitled" %></h1>
<% } %>

<!-- Gallery -->
<% if (item.photos && item.photos.length){ %>
<%- partial('gallery') %>
<% } %>

<!-- Content -->
<%- item.content %>

<!-- Comments -->
<div>
    <%- partial("_partial/comments.ejs") %>
</div>

